<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linLayPopup"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/call_popup_height"
    android:layout_gravity="top|center"
    android:orientation="vertical"
    android:alpha="0.8"
    >

    <LinearLayout
        android:id="@+id/linLayCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgVwCancel"
            android:layout_width="@dimen/cross_dimensions"
            android:layout_height="@dimen/cross_dimensions"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/cross_margins"
            android:layout_marginStart="@dimen/cross_margins"
            android:src="@drawable/main_btn_close"/>

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/call_btn_height"
            android:background="@color/colorPrimary"
            android:gravity="start|center_vertical"
            android:text="@string/cancel"
            android:textAllCaps="false" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:orientation="vertical"
        android:paddingBottom="@dimen/popup_padding"
        android:paddingTop="@dimen/popup_padding">

        <TextView
            android:id="@+id/txtVwTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/costs"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtVwInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15sp"
            android:gravity="center"
            android:text="@string/notification_costs" />

        <Button
            android:id="@+id/btnRingConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/popup_btn_margin"
            android:layout_marginStart="@dimen/popup_btn_margin"
            android:background="@drawable/btn_general"
            android:drawableStart="@drawable/main_btn_phone"
            android:gravity="center"
            android:paddingStart="@dimen/popup_btn_padding"
            android:paddingEnd="@dimen/popup_btn_padding"
            android:text="@string/ring"
            android:textAllCaps="false"/>
    </LinearLayout>
</LinearLayout>
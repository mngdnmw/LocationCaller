<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linLaySplash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/defaultBckgrndColor"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/btn_group_bottom"
    tools:context="dunmow.meng.pechhulp.controllers.SplashActivity">

    <ImageView
        android:id="@+id/logoLg"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/splash_logo" />

    <ImageView
        android:id="@+id/logoSml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/splash_logo_rsr" />

</LinearLayout>